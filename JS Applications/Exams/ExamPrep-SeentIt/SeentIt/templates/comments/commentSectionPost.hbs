<div class="post">
    <div class="col thumbnail">
        <a href="{{post.url}}">
            <img src="{{post.imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="http://sammyjs.org/docs/api/0.7.4/all#Sammy.RenderContext-load">
                {{post.title}}
            </a>
        </div>
        <div class="details">
            <p>{{post.description}}</p>
            <div class="info">
                submitted {{post.date}} ago by {{post.author}}
            </div>
            <div class="controls">
                {{#if isAuth}}
                    <ul>
                        <li class="action"><a class="editLink" href="#">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#">delete</a></li>
                    </ul>
                {{/if}}
            </div>

        </div>
    </div>
    <div class="clear"></div>
</div>
